#!/bin/bash
#
# God
#
# chkconfig: - 85 15
# description: start, stop, restart, status for God
#

RETVAL=0
LOG_DIR="/var/log"
LOG_FILE="${LOG_DIR}/god.log"
RUN_DIR="/var/run"
GLOBAL_CONFIG="/etc/god/god.conf"
PID_FILE="${RUN_DIR}/god.pid"
PROG_BINARY="/home/admin/.rbenv/shims/god"

case "$1" in
    start)
      echo "Starting god..."
      $PROG_BINARY -c $GLOBAL_CONFIG -P $PID_FILE -l $LOG_FILE
      RETVAL=$?
      echo "Done."
      ;;
    debug)
      echo "Starting god in foregroud..."
      $PROG_BINARY -D -c $GLOBAL_CONFIG -P $PID_FILE -l $LOG_FILE
      RETVAL=$?
      echo "Done."
      ;;
    stop)
      echo "Stopping god..."
      kill `cat $PID_FILE`
      for file in ${RUN_DIR}/god/*
      do
	        kill `cat $file`
	        echo "process $file killed"
      done
      RETVAL=$?
      echo "Done."
      ;;
    restart)
      echo "Restarting god..."
      kill `cat $PID_FILE`
      for file in ${RUN_DIR}/god/*
      do
	        kill `cat $file`
	        echo "process $file killed"
      done
      $PROG_BINARY -c $GLOBAL_CONFIG -P $PID_FILE -l $LOG_FILE
      RETVAL=$?
      echo "Done."
      ;;
    status)
      $PROG_BINARY status
      RETVAL=$?
      ;;
    *)
      echo "Usage: god {start|debug|stop|restart|status}"
      exit 1
  ;;
esac

exit $RETVAL
